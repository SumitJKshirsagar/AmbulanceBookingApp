<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/backgroundbutton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>



    </style>



        <style name="YourBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">


            <item name="android:background">@android:color/transparent</item>

        </style>





    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="colorPrimaryDark">#1976D2</color>
    <color name="colorPrimary">#2196F3</color>
    <color name="colorAccent">#FF4081</color>
    <color name="background_color">#f0f0f0</color>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">thin</item>
        <item name="android:listPreferredItemHeightSmall">60dp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>
    <style name="DriverTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#ED0755</item>
        <item name="colorSecondary">#F83F7E</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorSurface">#1634DC</item>
    </style>

</resources>





