<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile2"

    >

    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/backword"
        android:background="@color/grey"

        />
    <TextView
        android:id="@+id/acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your account details"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/darkGrey"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc"
        android:text="Your account details"
        android:orientation="vertical"
        android:paddingStart="20dp"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="User Name"
            android:textColor="@color/darkGrey"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/actualName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumit Kshirsagar"
            android:textColor="@color/darkGrey"
            android:background="@color/grey"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textColor="@color/darkGrey"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/actualEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Sumit@gmail.com"
            android:textColor="@color/darkGrey"
            android:background="@color/grey"
            />
        <TextView
            android:id="@+id/some"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Phone number"
            android:textColor="@color/darkGrey"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/actualMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+919370958150"
            android:textColor="@color/darkGrey"
            android:background="@color/grey"
            android:textSize="20sp"
            />
    </LinearLayout>
</RelativeLayout>

